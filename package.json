{
  "name": "tiny-swiper",
  "version": "1.0.2",
  "description": "2kb modular JS library alternative to SwiperJS with same modern API for carousel/slider/slideshow.",
  "main": "lib/index.min.js",
  "repository": "https://github.com/joe223/tiny-swiper.git",
  "author": "joe223",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development rollup -wc",
    "build": "cross-env NODE_ENV=production rollup -c",
    "test": "nyc mocha test/**/*.spec.js --config test/.mocharc.js",
    "test:local": "cross-env TEST_MODE=local npm run test",
    "report": "nyc npm run test && nyc report --reporter=text-lcov | coveralls"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "coveralls": "^3.0.7",
    "cross-env": "^6.0.3",
    "expect": "^24.9.0",
    "finalhandler": "^1.1.2",
    "husky": "^3.0.9",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "puppeteer": "^1.20.0",
    "puppeteer-to-istanbul": "https://github.com/joe223/puppeteer-to-istanbul#master",
    "rollup": "^1.23.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-uglify": "^6.0.3",
    "serve-static": "^1.14.1"
  },
  "browserslist": [
    "Android >= 7",
    "IOS >= 11",
    "Safari >= 11",
    "Chrome >= 49",
    "Firefox >= 31",
    "Samsung >= 5"
  ],
  "keywords": [
    "swiper",
    "swipe",
    "slider",
    "touch",
    "ios",
    "mobile",
    "tiny-swiper",
    "tinyswiper",
    "carousel"
  ],
  "nyc": {
    "report-dir": "./coverage",
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "test",
      "node_modules"
    ],
    "watermarks": {
      "lines": [
        70,
        90
      ],
      "functions": [
        70,
        90
      ],
      "branches": [
        70,
        90
      ],
      "statements": [
        70,
        90
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  }
}
